#!/bin/sh
if [ "${FOGLAMP_HOME}" = "" ]; then
	if [ ! -x /usr/local/foglamp/services/storage ]; then
		logger "Unable to find FogLAMP storage microservice in the default local"
		exit 1
	else
		/usr/local/foglamp/services/storage $@
		exit 0
	fi
else
	if [ ! -x ${FOGLAMP_HOME}/services/storage ]; then
		logger "Unable to find FogLAMP storage microservice"
		exit 1
	else
		${FOGLAMP_HOME}/services/storage $@
		exit 0
	fi
fi
