#!/bin/bash

set -e

check_user
check_classic

# Set the LD_LIBRARY_PATH variable
if [ `uname -m` == "armv7l" ]; then
  LD_LIBRARY_PATH=/usr/local/pgsql/lib:/usr/local/pgsql/lib/arm-linux-gnueabihf
  export LD_LIBRARY_PATH
fi

/usr/local/pgsql/bin/psql -d postgres -f /home/foglamp/FogLAMP/src/sql/foglamp_ddl.sql
/usr/local/pgsql/bin/psql -d foglamp -f /home/foglamp/FogLAMP/src/sql/foglamp_init_data.sql

exit 0
